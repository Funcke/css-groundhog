<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Groundhog - {{ title }}</title>
    <meta name="viewport" content="width=device-width">
    <link rel="icon" href="{{sitedata.site.baseurl}}/assets/images/favicon.ico">
    <link rel="stylesheet" href="{{sitedata.site.baseurl}}/css/main.css" charset="utf-8">
    <link rel="stylesheet" href="{{sitedata.site.baseurl}}/css/base/fonts.css" charset="utf-8">
    <link rel="stylesheet" href="{{sitedata.site.baseurl}}/assets/style/syntax.css" charset="utf-8">
    <style media="screen">
      body {
        background-color: #f8f8f8;
      }

      .demo__code {
        overflow: auto;
        max-width: 100%;
      }

      .area {
        display: flex;
      }

      .presentation-tile {
        flex-grow: 0;
      }

    </style>
  </head>
  <body {{#if theme}}class="{{theme}}"{{/if}}>
    {{> navigation}}
    {{#block 'breadcrumbs'}}
      {{#unless firstBreadcrumbEntry}}
      <ul class="breadcrumbs">
        <li class="breadcrumbs__item">
          <a class="breadcrumbs__link" href="{{sitedata.site.baseurl}}/">Main</a>
        </li>
        <li class="breadcrumbs__item">
          <span class="breadcrumbs__last">{{title}}</span>
        </li>
      </ul>
      {{else}}
      <ul class="breadcrumbs">
        <li class="breadcrumbs__item">
          <span class="breadcrumbs__last" href="{{sitedata.site.baseurl}}/">Main</span>
        </li>
      </ul>
      {{/unless}}
    {{/block}}

    {{#block 'area'}}
    <div class="area">
      {{#block 'sidebar'}}
      {{/block}}
      <div class="layout">
        {{> header}}
        <main class="island {{#if hasSidebar}} island--connected{{/if}}">
          {{#block 'main'}}
          {{{contents}}}
          {{/block}}
        </main>
      </div>
    </div>
    {{/block}}
    {{> footer}}
  </body>

</html>
