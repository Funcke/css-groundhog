{{#extend 'default'}}
  {{#content 'breadcrumbs'}}
  <ul class="breadcrumbs">
    <li class="breadcrumbs__item">
      <a class="breadcrumbs__link" href="/">Home</a>
    </li>
    {{#unless hideComponentBreadcrumb}}
    <li class="breadcrumbs__item">
      <a class="breadcrumbs__link" href="/doc/components/">Components</a>
    </li>
    {{/unless}}
    <li class="breadcrumbs__item">
      <span class="breadcrumbs__last">{{title}}</span>
    </li>
  </ul>
  {{/content}}

  {{#content 'sidebar'}}
    {{> component_nav}}
  {{/content}}

  {{#content 'main'}}
  <h1>{{title}}</h1>
  {{#if samples}}
  <h2>Examples</h2>
  {{#each samples}}
    <div class="demo">
    {{{this.code}}}
    </div>
    <div class="demo__code">
      <pre><code>
{{{highlight this.code 'html'}}}</code>
      </pre>
    </div>
  {{/each}}
  {{/if}}
  {{{contents}}}
  {{/content}}
{{/extend}}
